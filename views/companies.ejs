<script>
let currentPage = 1;
let searchTimeout;

function escapeHtml(text) {
  const d = document.createElement('div'); d.textContent = text || ''; return d.innerHTML;
}

function debounceSearch() {
  clearTimeout(searchTimeout);
  searchTimeout = setTimeout(() => { currentPage = 1; loadCompanies(); }, 300);
}

function changePage(delta) {
  currentPage += delta;
  if (currentPage < 1) currentPage = 1;
  loadCompanies();
}

async function loadOverview() {
  try {
    const res = await fetch('/api/companies/overview');
    const o = await res.json();
    document.getElementById('s-total').textContent = o.total || 0;
    document.getElementById('s-contacts').textContent = o.total_contacts || 0;
    document.getElementById('s-unmatched').textContent = o.unmatched || 0;
    document.getElementById('s-with-contacts').textContent = o.with_contacts || 0;
  } catch (e) { console.error(e); }
}

async function loadIndustries() {
  try {
    const res = await fetch('/api/companies/industries');
    const industries = await res.json();
    const sel = document.getElementById('industryFilter');
    industries.forEach(i => { sel.innerHTML += '<option value="' + escapeHtml(i) + '">' + escapeHtml(i) + '</option>'; });
  } catch (e) { /* ignore */ }
}

async function loadCompanies() {
  const search = document.getElementById('searchInput').value;
  const industry = document.getElementById('industryFilter').value;
  const maxReviews = document.getElementById('reviewFilter').value;

  let url = '/api/companies?page=' + currentPage + '&limit=50';
  if (search) url += '&search=' + encodeURIComponent(search);
  if (industry) url += '&industry=' + encodeURIComponent(industry);
  if (maxReviews) url += '&max_review_count=' + maxReviews;

  try {
    const res = await fetch(url);
    const data = await res.json();
    const container = document.getElementById('companyList');

    document.getElementById('companyCount').textContent = data.total + ' companies';
    document.getElementById('pageInfo').textContent = 'Page ' + currentPage + ' of ' + (Math.ceil(data.total / 50) || 1);
    document.getElementById('prevBtn').disabled = currentPage <= 1;
    document.getElementById('nextBtn').disabled = currentPage * 50 >= data.total;

    const companies = data.companies || [];
    if (!companies.length) {
      container.innerHTML = '<div style="padding:40px;text-align:center;color:var(--text-dim);">No companies found. Import leads or click "Auto-Match Leads" to create companies from existing leads.</div>';
      return;
    }

    container.innerHTML = companies.map(c => {
      const initial = (c.name || '?')[0].toUpperCase();
      const location = [c.city, c.state].filter(Boolean).join(', ');
      return '<div class="co-card" onclick="openCompanySidebar(' + c.id + '); event.stopPropagation();">' +
        '<div class="co-avatar">' + initial + '</div>' +
        '<div class="co-info">' +
          '<div class="co-name">' + escapeHtml(c.name) + '</div>' +
          (c.domain ? '<div class="co-domain">' + escapeHtml(c.domain) + '</div>' : '') +
          '<div class="co-detail-row">' +
            (c.industry ? '<span class="co-industry-tag">' + escapeHtml(c.industry) + '</span>' : '') +
            (location ? '<span>' + escapeHtml(location) + '</span>' : '') +
            (c.employee_count > 0 ? '<span>' + c.employee_count + ' employees</span>' : '') +
          '</div>' +
        '</div>' +
        '<div class="co-contacts-col">' +
          '<div class="co-contacts-count">' + (c.leads_count || 0) + '</div>' +
          '<div class="co-contacts-label">Contacts</div>' +
        '</div>' +
      '</div>';
    }).join('');
  } catch (e) { console.error('Load companies error:', e); }
}

async function runMatcher() {
  if (!confirm('Run auto-matcher? This will scan all unmatched leads and associate them with companies based on email domain and website domain.')) return;
  try {
    const res = await fetch('/api/companies/run-matcher', { method: 'POST' });
    const data = await res.json();
    alert('Matching complete!\n\nProcessed: ' + data.total_processed + '\nMatched: ' + data.matched + '\nNew companies: ' + data.new_companies + '\nSkipped: ' + data.skipped);
    loadOverview();
    loadCompanies();
  } catch (e) { alert('Error: ' + e.message); }
}

function showCreateModal() {
  document.getElementById('createModal').style.display = 'flex';
}
function hideCreateModal() {
  document.getElementById('createModal').style.display = 'none';
}

async function createCompany() {
  const name = document.getElementById('c-name').value.trim();
  if (!name) return alert('Company name is required');

  const data = {
    name,
    domain: document.getElementById('c-domain').value.trim(),
    website: document.getElementById('c-website').value.trim(),
    industry: document.getElementById('c-industry').value.trim(),
    city: document.getElementById('c-city').value.trim(),
    state: document.getElementById('c-state').value.trim(),
    phone: document.getElementById('c-phone').value.trim(),
    employee_count: parseInt(document.getElementById('c-employees').value) || 0,
  };

  try {
    const res = await fetch('/api/companies', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data),
    });
    if (res.ok) {
      hideCreateModal();
      loadOverview();
      loadCompanies();
    } else {
      const err = await res.json();
      alert('Error: ' + (err.error || 'Unknown'));
    }
  } catch (e) { alert('Error: ' + e.message); }
}

// ========== HubSpot-Style Company Sidebar ==========

let currentCompanyId = null;

function openCompanySidebar(companyId) {
  currentCompanyId = companyId;
  document.getElementById('companySidebar').classList.add('open');
  loadCompanySidebarData(companyId);
}

function closeCompanySidebar() {
  document.getElementById('companySidebar').classList.remove('open');
  currentCompanyId = null;
}

function switchCompanyTab(tab) {
  document.querySelectorAll('.sidebar-tab').forEach(t => t.classList.remove('active'));
  document.querySelector(`.sidebar-tab[data-tab="${tab}"]`).classList.add('active');
  document.querySelectorAll('.sidebar-tab-content').forEach(c => c.classList.remove('active'));
  document.getElementById('tab-co-' + tab).classList.add('active');
}

function openFullCompany() {
  if (currentCompanyId) window.location = '/company/' + currentCompanyId;
}

let sidebarCompanyContacts = [];

async function loadCompanySidebarData(companyId) {
  try {
    const res = await fetch('/api/companies/' + companyId);
    const data = await res.json();
    const c = data.company;
    const contacts = data.contacts || [];
    sidebarCompanyContacts = contacts;

    document.getElementById('sidebarCompanyName').textContent = c.name;
    document.getElementById('sidebarCompanyDomain').textContent = c.domain || '';

    // Overview tab
    document.getElementById('sidebarCompanyOverview').innerHTML =
      '<table class="sidebar-info-table">' +
        '<tr><td>Domain</td><td><strong>' + escapeHtml(c.domain || '—') + '</strong></td></tr>' +
        '<tr><td>Website</td><td>' + (c.website ? '<a href="' + escapeHtml(c.website) + '" target="_blank" style="color:var(--accent);">' + escapeHtml(c.website) + '</a>' : '—') + '</td></tr>' +
        '<tr><td>Phone</td><td>' + (c.phone ? '<a href="tel:' + escapeHtml(c.phone) + '" style="color:var(--accent);">' + escapeHtml(c.phone) + '</a>' : '—') + '</td></tr>' +
        '<tr><td>Industry</td><td>' + escapeHtml(c.industry || '—') + '</td></tr>' +
        '<tr><td>Location</td><td>' + escapeHtml([c.city, c.state].filter(Boolean).join(', ') || '—') + '</td></tr>' +
        '<tr><td>Employees</td><td>' + (c.employee_count || '—') + '</td></tr>' +
        '<tr><td>Rating</td><td>' + (c.rating ? c.rating + ' (' + (c.review_count || 0) + ' reviews)' : '—') + '</td></tr>' +
        '<tr><td>Contacts</td><td><strong>' + (c.leads_count || 0) + '</strong></td></tr>' +
      '</table>';

    // Contacts tab
    renderSidebarContacts();
  } catch (e) { console.error('Load company sidebar error:', e); }
}

function renderSidebarContacts() {
  if (!sidebarCompanyContacts.length) {
    document.getElementById('sidebarCompanyContacts').innerHTML = '<div style="color:var(--text-dim);text-align:center;padding:40px 0;">No contacts linked. Click "Link Contact" above to add one.</div>';
  } else {
    document.getElementById('sidebarCompanyContacts').innerHTML = sidebarCompanyContacts.map(l => {
      const name = [l.first_name, l.last_name].filter(Boolean).join(' ') || 'Unknown';
      return '<div class="sidebar-contact-item" style="display:flex;justify-content:space-between;align-items:center;">' +
        '<div style="flex:1;min-width:0;" onclick="window.location=\'/lead/' + l.id + '\'">' +
          '<div class="sidebar-contact-name">' + escapeHtml(name) + '</div>' +
          '<div class="sidebar-contact-email">' + escapeHtml(l.email || l.phone || '—') + '</div>' +
        '</div>' +
        '<button onclick="event.stopPropagation();sidebarUnlinkContact(' + l.id + ');" style="background:none;border:1px solid var(--border);color:var(--text-dim);padding:4px 8px;border-radius:4px;font-size:11px;cursor:pointer;flex-shrink:0;">Unlink</button>' +
      '</div>';
    }).join('');
  }
}

function showSidebarLinkContact() {
  document.getElementById('sidebarLinkSection').style.display = 'block';
  document.getElementById('sidebarLeadSearch').value = '';
  document.getElementById('sidebarLeadResults').innerHTML = '';
  document.getElementById('sidebarLeadSearch').focus();
  switchCompanyTab('contacts');
}

function hideSidebarLinkContact() {
  document.getElementById('sidebarLinkSection').style.display = 'none';
  document.getElementById('sidebarLeadSearch').value = '';
  document.getElementById('sidebarLeadResults').innerHTML = '';
}

let sidebarSearchTimer;
async function sidebarSearchLeads() {
  clearTimeout(sidebarSearchTimer);
  sidebarSearchTimer = setTimeout(async () => {
    const q = document.getElementById('sidebarLeadSearch').value.trim();
    if (q.length < 2) {
      document.getElementById('sidebarLeadResults').innerHTML = '';
      return;
    }
    try {
      const res = await fetch('/api/leads?search=' + encodeURIComponent(q) + '&limit=10');
      const data = await res.json();
      const container = document.getElementById('sidebarLeadResults');
      if (!data.leads || !data.leads.length) {
        container.innerHTML = '<div style="padding:10px;color:var(--text-dim);font-size:12px;">No leads found</div>';
        return;
      }
      container.innerHTML = data.leads.map(l => {
        const name = [l.first_name, l.last_name].filter(Boolean).join(' ') || 'Unknown';
        const alreadyLinked = l.company_id === currentCompanyId;
        const linkedClass = alreadyLinked ? ' linked' : '';
        return '<div class="sidebar-search-item' + linkedClass + '" onclick="' + (alreadyLinked ? '' : 'sidebarLinkContact(' + l.id + ')') + '">' +
          '<strong>' + escapeHtml(name) + '</strong>' +
          (l.email ? ' &middot; ' + escapeHtml(l.email) : '') +
          (l.phone ? ' &middot; ' + escapeHtml(l.phone) : '') +
          (alreadyLinked ? ' <span style="color:var(--green);font-size:11px;">(✓ linked)</span>' : '') +
        '</div>';
      }).join('');
    } catch (e) { console.error(e); }
  }, 300);
}

async function sidebarLinkContact(leadId) {
  if (!currentCompanyId) return;
  try {
    const res = await fetch('/api/companies/' + currentCompanyId + '/add-lead', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ lead_id: leadId }),
    });
    if (res.ok) {
      hideSidebarLinkContact();
      await loadCompanySidebarData(currentCompanyId);
    } else {
      alert('Error linking contact');
    }
  } catch (e) {
    alert('Error: ' + e.message);
  }
}

async function sidebarUnlinkContact(leadId) {
  if (!currentCompanyId) return;
  if (!confirm('Unlink this contact from the company?')) return;
  try {
    const res = await fetch('/api/companies/' + currentCompanyId + '/remove-lead', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ lead_id: leadId }),
    });
    if (res.ok) {
      await loadCompanySidebarData(currentCompanyId);
    } else {
      alert('Error unlinking contact');
    }
  } catch (e) {
    alert('Error: ' + e.message);
  }
}

document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape' && document.getElementById('companySidebar').classList.contains('open')) {
    closeCompanySidebar();
  }
});


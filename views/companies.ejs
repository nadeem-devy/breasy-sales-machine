<%- include('partials/header') %>

<div class="page-header">
  <h1>Companies</h1>
  <div class="btn-group">
    <button class="btn btn-outline btn-sm" onclick="runMatcher()">Auto-Match Leads</button>
    <button class="btn btn-primary btn-sm" onclick="showCreateModal()">Add Company</button>
  </div>
</div>

<!-- Overview Stats -->
<div class="co-stats-row" id="coStats">
  <div class="co-stat-card"><div class="co-stat-value" id="s-total">—</div><div class="co-stat-label">Companies</div></div>
  <div class="co-stat-card"><div class="co-stat-value" id="s-contacts" style="color:var(--accent)">—</div><div class="co-stat-label">Linked Contacts</div></div>
  <div class="co-stat-card"><div class="co-stat-value" id="s-unmatched" style="color:var(--yellow)">—</div><div class="co-stat-label">Unmatched Leads</div></div>
  <div class="co-stat-card"><div class="co-stat-value" id="s-with-contacts" style="color:var(--green)">—</div><div class="co-stat-label">With Contacts</div></div>
</div>

<!-- Filters -->
<div class="filter-bar">
  <input type="text" id="searchInput" placeholder="Search company, domain, city..." style="min-width:280px;" onkeyup="debounceSearch()">
  <select id="industryFilter" onchange="loadCompanies()">
    <option value="">All Industries</option>
  </select>
  <select id="reviewFilter" onchange="loadCompanies()">
    <option value="">All Reviews</option>
    <option value="5">5 or less</option>
    <option value="10">10 or less</option>
    <option value="25">25 or less</option>
    <option value="50">50 or less</option>
    <option value="100">100 or less</option>
    <option value="0">0 reviews</option>
  </select>
  <span id="companyCount" style="color:var(--text-dim);font-size:13px;"></span>
</div>

<!-- Company List -->
<div class="co-list" id="companyList">
  <div style="padding:40px;text-align:center;color:var(--text-dim);">Loading companies...</div>
</div>

<!-- Pagination -->
<div style="display:flex;justify-content:center;gap:12px;margin-top:16px;">
  <button class="btn btn-outline btn-sm" id="prevBtn" onclick="changePage(-1)" disabled>Previous</button>
  <span id="pageInfo" style="color:var(--text-dim);font-size:13px;line-height:30px;">Page 1</span>
  <button class="btn btn-outline btn-sm" id="nextBtn" onclick="changePage(1)">Next</button>
</div>

<!-- Create Company Modal -->
<div id="createModal" style="display:none;position:fixed;top:0;left:0;right:0;bottom:0;background:rgba(0,0,0,0.7);z-index:1000;display:none;align-items:center;justify-content:center;">
  <div style="background:var(--bg-card);border:1px solid var(--border);border-radius:12px;padding:24px;width:100%;max-width:480px;max-height:90vh;overflow-y:auto;box-shadow:0 20px 60px rgba(0,0,0,0.5);">
    <h3 style="margin-bottom:16px;color:var(--text);">Add Company</h3>
    <div class="form-group"><label style="color:var(--text);">Company Name *</label><input type="text" id="c-name" style="color:var(--text);background:var(--bg);border:1px solid var(--border);"></div>
    <div class="form-group"><label style="color:var(--text);">Domain</label><input type="text" id="c-domain" placeholder="e.g. acme.com" style="color:var(--text);background:var(--bg);border:1px solid var(--border);"></div>
    <div class="form-group"><label style="color:var(--text);">Website</label><input type="text" id="c-website" placeholder="https://acme.com" style="color:var(--text);background:var(--bg);border:1px solid var(--border);"></div>
    <div class="form-group"><label style="color:var(--text);">Industry</label><input type="text" id="c-industry" style="color:var(--text);background:var(--bg);border:1px solid var(--border);"></div>
    <div style="display:grid;grid-template-columns:1fr 1fr;gap:10px;">
      <div class="form-group"><label style="color:var(--text);">City</label><input type="text" id="c-city" style="color:var(--text);background:var(--bg);border:1px solid var(--border);"></div>
      <div class="form-group"><label style="color:var(--text);">State</label><input type="text" id="c-state" style="color:var(--text);background:var(--bg);border:1px solid var(--border);"></div>
    </div>
    <div class="form-group"><label style="color:var(--text);">Phone</label><input type="text" id="c-phone" style="color:var(--text);background:var(--bg);border:1px solid var(--border);"></div>
    <div class="form-group"><label style="color:var(--text);">Employee Count</label><input type="number" id="c-employees" value="0" style="color:var(--text);background:var(--bg);border:1px solid var(--border);"></div>
    <div style="display:flex;gap:10px;margin-top:16px;">
      <button class="btn btn-primary" style="flex:1;" onclick="createCompany()">Create</button>
      <button class="btn btn-outline" style="flex:1;" onclick="hideCreateModal()">Cancel</button>
    </div>
  </div>
</div>

<!-- HubSpot-Style Right Sidebar -->
<div id="companySidebar" class="company-sidebar">
  <div class="company-sidebar-overlay" onclick="closeCompanySidebar()"></div>
  <div class="company-sidebar-panel">
    <div class="company-sidebar-header">
      <div>
        <h2 id="sidebarCompanyName" style="margin:0;font-size:18px;color:var(--text);">Loading...</h2>
        <div id="sidebarCompanyDomain" style="font-size:13px;color:var(--text-dim);margin-top:2px;"></div>
      </div>
      <button onclick="closeCompanySidebar()" style="background:none;border:none;font-size:24px;color:var(--text-dim);cursor:pointer;padding:0;line-height:1;">&times;</button>
    </div>

    <div class="company-sidebar-tabs">
      <div class="sidebar-tab active" data-tab="overview" onclick="switchCompanyTab('overview')">Overview</div>
      <div class="sidebar-tab" data-tab="contacts" onclick="switchCompanyTab('contacts')">Contacts</div>
    </div>

    <div class="company-sidebar-content" id="sidebarCompanyContent">
      <div class="sidebar-tab-content active" id="tab-co-overview">
        <div id="sidebarCompanyOverview">Loading...</div>
      </div>
      <div class="sidebar-tab-content" id="tab-co-contacts">
        <!-- Link Contact Section -->
        <div id="sidebarLinkSection" style="display:none;margin-bottom:20px;padding:16px;background:var(--bg);border:1px solid var(--border);border-radius:8px;">
          <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:12px;">
            <strong style="color:var(--text);font-size:13px;">Link New Contact</strong>
            <button onclick="hideSidebarLinkContact()" style="background:none;border:none;color:var(--text-dim);cursor:pointer;font-size:18px;line-height:1;padding:0;">&times;</button>
          </div>
          <input type="text" id="sidebarLeadSearch" placeholder="Search by name, email, or phone..." oninput="sidebarSearchLeads()" style="width:100%;padding:8px 12px;background:var(--bg-card);border:1px solid var(--border);color:var(--text);border-radius:6px;font-size:13px;margin-bottom:8px;">
          <div id="sidebarLeadResults" style="max-height:200px;overflow-y:auto;"></div>
        </div>
        <div id="sidebarCompanyContacts">Loading...</div>
      </div>
    </div>

    <div class="company-sidebar-footer">
      <button class="btn btn-primary" onclick="openFullCompany()" style="width:100%;">View Full Company</button>
    </div>

    <!-- Floating Action Button -->
    <button class="sidebar-fab" onclick="showSidebarLinkContact()">
      Add Contact
    </button>
  </div>
</div>


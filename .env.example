# ============================================
# BREASY SALES MACHINE â€” Environment Config
# Copy this to .env and fill in your values
# ============================================

# Server
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Telephony Provider: 'twilio' or 'dialpad'
TELEPHONY_PROVIDER=twilio

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBERS=+15551234567,+15551234568
TWILIO_WEBHOOK_URL=http://localhost:3000/webhooks/twilio

# Dialpad (Fallback)
DIALPAD_API_KEY=your_dialpad_api_key
DIALPAD_API_SECRET=your_dialpad_api_secret
DIALPAD_PHONE_NUMBERS=+15551234567
DIALPAD_WEBHOOK_URL=http://localhost:3000/webhooks/dialpad
DIALPAD_WEBHOOK_SECRET=your_dialpad_webhook_secret

# SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=nadeem@breasy.com
SENDGRID_FROM_NAME=Nadeem from Breasy

# Vapi (AI Voice Calls)
VAPI_API_KEY=your_vapi_api_key
VAPI_PHONE_NUMBER_ID=your_vapi_phone_id
VAPI_ASSISTANT_ID=your_vapi_assistant_id
VAPI_WEBHOOK_URL=http://localhost:3000/webhooks/vapi

# HubSpot
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_PORTAL_ID=your_portal_id

# Calendly / Meeting Link
MEETING_BASE_URL=https://calendly.com/breasy/demo

# App Download Link
APP_DOWNLOAD_BASE_URL=https://breasy.app.link

# Video Demo Link
VIDEO_BASE_URL=https://breasy.com/demo

# Daily Limits
SMS_DAILY_LIMIT=200
EMAIL_DAILY_LIMIT=500
CALLS_DAILY_LIMIT=75

# Send Windows (24h format)
SMS_WINDOW_START=9
SMS_WINDOW_END=20
EMAIL_WINDOW_START=8
EMAIL_WINDOW_END=21
CALL_WINDOW_START=10
CALL_WINDOW_END=17

# Timezone
DEFAULT_TIMEZONE=America/New_York

# Sequence Scheduler
SCHEDULER_INTERVAL_MINUTES=5
BATCH_SIZE=50

# Admin
ADMIN_PHONE=+15559999999
ADMIN_EMAIL=nadeem@breasy.com
